<?xml version="1.0" encoding="UTF-8"?>
<taglib version="2.1" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-jsptaglibrary_2_1.xsd">
    <tlib-version>1.0</tlib-version>
    <short-name>my</short-name>
    <uri>/tlds/mytld</uri>
  
    <!-- Hello tag -->
    <tag>
        <name>hello</name>
        <tag-class>com.web.tag.HelloTag</tag-class>
        <body-content>empty</body-content>
        <description>晚安 現在時刻: ...</description>
    </tag>
    
    <!-- Welcome tag -->
    <tag>
        <name>welcome</name>
        <tag-class>com.web.tag.WelcomeTag</tag-class>
        <body-content>JSP</body-content>
        <description>welcome xxx</description>
        <attribute>
            <name>username</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
        </attribute>
    </tag>
    
    <!-- BMI tag -->
    <tag>
        <name>bmi</name>
        <tag-class>com.web.tag.BMITag</tag-class>
        <body-content>empty</body-content>
        <description>bmi xxx</description>
        <attribute>
            <name>h</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
        </attribute>
        <attribute>
            <name>w</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
        </attribute>
        <attribute>
            <name>result</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
        </attribute>
    </tag>
    
    <!-- Exchange tag -->
    <tag>
        <name>exchange</name>
        <tag-class>com.web.tag.ExchangeTag</tag-class>
        <body-content>JSP</body-content>
        <description>welcome xxx</description>
        <attribute>
            <name>symbol</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
        </attribute>
    </tag>
</taglib>